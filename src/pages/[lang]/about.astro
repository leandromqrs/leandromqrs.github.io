---
import BaseLayout from "../../layouts/BaseLayout.astro";

import ContactCTA from "../../components/ContactCTA.astro";
import Hero from "../../components/Hero.astro";

// Paraglide translations
import { m } from "../../paraglide/messages.js";
import { getLocale } from "../../paraglide/runtime.js";

// For dynamic routing
export function getStaticPaths() {
	return [
		{ params: { lang: 'en' } },
		{ params: { lang: 'pt-br' } }
	];
}
---

<BaseLayout
  title={m.aboutTitle() + " | Leandro Rodrigues"}
  description="About Leandro Rodrigues, Senior Full Stack Developer and Software Engineer."
>
  <div class="stack gap-20">
    <main class="wrapper about">
      <Hero title={m.aboutTitle()} tagline={m.aboutTagline()} />

      <section>
        <h2 class="section-title">{m.aboutBackgroundTitle()}</h2>
        <div class="content">
          <p>
            {m.aboutBackgroundP1()}
          </p>
          <p>
            {m.aboutBackgroundP2()}
          </p>
          <p>
            {m.aboutBackgroundP3()}
          </p>
        </div>
      </section>

      <section>
        <h2 class="section-title">{m.aboutEducationTitle()}</h2>
        <div class="content">
          <p>{m.aboutEducationP1()}</p>
          <p>{m.aboutEducationP2()}</p>
          <p>{m.aboutEducationP3()}</p>
        </div>
      </section>

      <section>
        <h2 class="section-title">{m.aboutSkillsTitle()}</h2>
        <div class="content">
          <p>{m.aboutSkillsP1()}</p>
          <p>{m.aboutSkillsP2()}</p>
          <p>{m.aboutSkillsP3()}</p>
          <p>{m.aboutSkillsP4()}</p>
        </div>
      </section>
    </main>

    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  img {
    margin-top: 1.5rem;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--gray-200);
  }

  .section-title {
    grid-column-start: 1;
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
  }

  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  @media (min-width: 50em) {
    .about {
      display: grid;
      grid-template-columns: 1fr 60% 1fr;
    }

    .about > :global(:first-child) {
      grid-column-start: 2;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }
  }
</style>
