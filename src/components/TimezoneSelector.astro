---
const timezones = [
    'UTC',
    'America/Sao_Paulo',
    'America/New_York',
    'Europe/London',
    'Asia/Tokyo',
    'Australia/Sydney'
];

const defaultTimezone = 'America/Sao_Paulo';
---

<div class="timezone-selector">
    <select id="timezone" name="timezone" class="timezone-select">
        {timezones.map((timezone) => (
            <option value={timezone} selected={timezone === defaultTimezone}>
                {timezone.replace('_', ' ')}
            </option>
        ))}
    </select>
</div>

<script>
    // Client-side script para gerenciar a mudança de fuso horário
    document.addEventListener('DOMContentLoaded', function() {
        const timezoneSelect = document.getElementById('timezone');
        
        if (timezoneSelect) {
            timezoneSelect.addEventListener('change', function(event) {
                const selectedTimezone = event.target.value;
                console.log(`Timezone changed to: ${selectedTimezone}`);
            });
        }
    });
</script>

<style>
.timezone-selector {
    display: inline-block;
}

.timezone-select {
    background: var(--accent-subtle-overlay);
    color: var(--gray-0);
    border: 1px solid var(--gray-800);
    border-radius: 999rem;
    padding: 0.4rem 0.9rem;
    font-size: var(--text-sm);
    font-family: var(--font-brand);
    cursor: pointer;
    transition: background-color var(--theme-transition);
    box-shadow: var(--shadow-sm);
}

.timezone-select:hover, 
.timezone-select:focus {
    background-color: var(--accent-overlay);
    outline: none;
}
</style>