---
import TimeSlotPicker from './TimeSlotPicker.astro';
import Icon from './Icon.astro';
import TimezoneSelector from './TimezoneSelector.astro';
import CallToAction from './CallToAction.astro';
---

<div class="schedule-container">
    <div class="schedule-layout">
        <!-- Coluna esquerda: Informações da reunião -->
        <div class="meeting-panel">
            <div class="organizer-header">
                <img src="/assets/portrait.jpg" alt="Organizer Avatar" class="avatar">
                <div class="organizer-info">
                    <h2>Leandro M.</h2>
                </div>
            </div>

            <div class="meeting-title-block">
                <h3>30 Min Meeting</h3>
                <span class="meeting-pill">30 min</span>
            </div>

            <ul class="meeting-info-list">
                <li>
                    <Icon icon="check-circle" size="1.2em" />
                    <span>Confirmation required</span>
                </li>
                <li>
                    <Icon icon="clock" size="1.2em" />
                    <span>30 minutes</span>
                </li>
                <li>
                    <Icon icon="video-camera" size="1.2em" />
                    <span>Google Meet</span>
                </li>
                <li>
                    <Icon icon="globe" size="1.2em" />
                    <TimezoneSelector />
                </li>
            </ul>
        </div>

        <!-- Coluna direita: Calendário e seleção de horário -->
        <div class="calendar-panel">
            <TimeSlotPicker />
        </div>
    </div>

    <!-- Formulário de contato (aparece após seleção de horário) -->
    <div id="contactForm" class="contact-form" style="display: none;">
        <h2 class="section-title">Complete your booking</h2>
        
        <form id="bookingForm" method="POST" class="booking-form">
            <input type="hidden" id="selectedDate" name="selectedDate" value="">
            <input type="hidden" id="selectedTime" name="selectedTime" value="">
            
            <div class="form-grid">
                <div class="form-field">
                    <label for="name">Your name</label>
                    <input type="text" id="name" name="name" required placeholder="Full name">
                </div>
                
                <div class="form-field">
                    <label for="email">Email address</label>
                    <input type="email" id="email" name="email" required placeholder="you@example.com">
                </div>
            </div>
            
            <div class="form-field">
                <label for="topic">What would you like to discuss? (optional)</label>
                <textarea id="topic" name="topic" rows="3" placeholder="Brief description of what you'd like to talk about..."></textarea>
            </div>
            
            <div class="appointment-summary">
                <div class="summary-header">
                    <h3>Appointment Summary</h3>
                </div>
                
                <div class="summary-details">
                    <div class="summary-row">
                        <Icon icon="calendar" size="1.2em" />
                        <span id="summaryDate">Select a date</span>
                    </div>
                    <div class="summary-row">
                        <Icon icon="clock" size="1.2em" />
                        <span id="summaryTime">Select a time</span>
                    </div>
                    <div class="summary-row">
                        <Icon icon="video-camera" size="1.2em" />
                        <span>Google Meet (link will be provided)</span>
                    </div>
                </div>
            </div>
            
            <div class="form-buttons">
                <button type="submit" class="pill-button action-button">
                    <Icon icon="paper-plane-tilt" size="1.2em" /> 
                    Confirm Booking
                </button>
            </div>
        </form>
        
        <!-- Mensagem de confirmação -->
        <div id="confirmationMessage" class="confirmation-message" style="display: none;">
            <div class="confirmation-icon">
                <Icon icon="check-circle" size="3em" />
            </div>
            <h2 class="section-title">You're all set!</h2>
            <p>Your meeting has been scheduled successfully.</p>
            
            <div class="confirmation-details">
                <div class="details-row">
                    <span class="details-label">Date:</span>
                    <span id="confirmedDate" class="details-value"></span>
                </div>
                <div class="details-row">
                    <span class="details-label">Time:</span>
                    <span id="confirmedTime" class="details-value"></span>
                </div>
                <div class="details-row">
                    <span class="details-label">Meet link:</span>
                    <a id="meetLink" href="#" class="details-link">Will be provided</a>
                </div>
            </div>
            
            <div class="action-links">
                <a href="/schedule" class="pill-button">
                    <Icon icon="calendar" size="1.2em" /> 
                    Book another meeting
                </a>
            </div>
        </div>
        
        <!-- Mensagem de erro -->
        <div id="errorMessage" class="error-message" style="display: none;">
            <div class="error-icon">
                <Icon icon="warning" size="3em" />
            </div>
            <h2 class="section-title">Something went wrong</h2>
            <p>We couldn't process your booking. Please try again or contact me directly.</p>
            
            <div class="action-links">
                <button class="pill-button" onclick="window.location.reload()">
                    <Icon icon="arrow-right" size="1.2em" />
                    Try Again
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Transformando a funcionalidade de agendamento em uma página estática
(function() {
    document.addEventListener('DOMContentLoaded', function() {
        // Form elements
        const bookingForm = document.getElementById('bookingForm');
        const confirmationMessage = document.getElementById('confirmationMessage');
        const errorMessage = document.getElementById('errorMessage');
        
        if (bookingForm) {
            bookingForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Obter os dados do formulário
                const formData = new FormData(bookingForm);
                const formObject = Object.fromEntries(formData.entries());
                
                // Validar os campos obrigatórios
                if (!formObject.selectedDate || !formObject.selectedTime || !formObject.name || !formObject.email) {
                    alert('Por favor, preencha todos os campos obrigatórios.');
                    return;
                }
                
                // Gerar um link único do Jitsi Meet
                const roomName = `meeting-${Date.now()}-${Math.random().toString(36).substring(2, 8)}`;
                const meetLink = `https://meet.jit.si/${roomName}`;
                
                // Atualizar a mensagem de confirmação
                const confirmedDate = document.getElementById('confirmedDate');
                const confirmedTime = document.getElementById('confirmedTime');
                const meetLinkElement = document.getElementById('meetLink');
                
                if (confirmedDate) confirmedDate.textContent = formObject.selectedDate;
                if (confirmedTime) confirmedTime.textContent = formObject.selectedTime;
                if (meetLinkElement) {
                    meetLinkElement.textContent = meetLink;
                    meetLinkElement.href = meetLink;
                }
                
                // Exibir a mensagem de confirmação
                bookingForm.style.display = 'none';
                if (confirmationMessage) {
                    confirmationMessage.style.display = 'block';
                    confirmationMessage.scrollIntoView({ behavior: 'smooth' });
                }
            });
        }

        // Escutar o evento de seleção de horário
        window.addEventListener('timeSlotSelected', function(event) {
            if (!event.detail) return;
            
            const { date, time } = event.detail;
            
            // Atualizar os campos ocultos do formulário
            const selectedDate = document.getElementById('selectedDate');
            const selectedTime = document.getElementById('selectedTime');
            if (selectedDate) selectedDate.value = date;
            if (selectedTime) selectedTime.value = time;
            
            // Formatar data para exibição
            let formattedDate = new Date(date + 'T00:00:00');
            const options = { weekday: 'long', month: 'long', day: 'numeric' };
            const displayDate = formattedDate.toLocaleDateString('en-US', options);
            
            // Formatar hora para exibição
            const [hours, minutes] = time.split(':').map(Number);
            const period = hours >= 12 ? 'PM' : 'AM';
            const hours12 = hours % 12 || 12; // Convert 0 to 12
            const displayTime = `${hours12}:${minutes.toString().padStart(2, '0')} ${period}`;
            
            // Atualizar o resumo
            const summaryDate = document.getElementById('summaryDate');
            const summaryTime = document.getElementById('summaryTime');
            if (summaryDate) summaryDate.textContent = displayDate;
            if (summaryTime) summaryTime.textContent = displayTime;
            
            // Exibir o formulário de contato
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.style.display = 'block';
                
                // Rolar suavemente até o formulário
                setTimeout(function() {
                    contactForm.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }, 100);
            }
        });
    });
})();
</script>

<style>
    /* Layout principal */
    .schedule-container {
        max-width: 1100px;
        margin: 0 auto;
        font-family: var(--font-brand);
    }
    
    .schedule-layout {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
    }
    
    /* Painel esquerdo - Informações da reunião */
    .meeting-panel {
        background: var(--gray-999_40);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: var(--shadow-sm);
    }
    
    .organizer-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
    }
    
    .organizer-info h2 {
        margin: 0;
        font-size: var(--text-xl);
    }
    
    .meeting-title-block {
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .meeting-title-block h3 {
        margin: 0;
        font-size: var(--text-lg);
    }
    
    .meeting-pill {
        background-color: var(--accent-regular);
        color: var(--accent-text-over);
        padding: 0.3rem 0.8rem;
        border-radius: 999rem;
        font-size: var(--text-xs);
        font-weight: 600;
    }
    
    .meeting-info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .meeting-info-list li {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--gray-800);
        color: var(--gray-300);
    }
    
    .meeting-info-list li:last-child {
        border-bottom: none;
    }
    
    /* Painel direito - Calendário */
    .calendar-panel {
        background: var(--gray-999_40);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: var(--shadow-sm);
    }
    
    /* Formulário de contato */
    .contact-form {
        margin-top: 3rem;
        background: var(--gray-999_40);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: var(--shadow-sm);
    }
    
    .section-title {
        font-size: var(--text-xl);
        margin-top: 0;
        margin-bottom: 1.5rem;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }
    
    .form-field {
        margin-bottom: 1.5rem;
    }
    
    .form-field label {
        display: block;
        margin-bottom: 0.5rem;
        font-size: var(--text-sm);
        font-weight: 500;
    }
    
    .form-field input,
    .form-field textarea {
        width: 100%;
        padding: 0.75rem;
        border-radius: 0.5rem;
        border: 1px solid var(--gray-800);
        background: var(--gray-999);
        color: var(--gray-0);
        font-family: var(--font-brand);
    }
    
    .form-field input:focus,
    .form-field textarea:focus {
        border-color: var(--accent-regular);
        outline: none;
    }
    
    /* Resumo do agendamento */
    .appointment-summary {
        background: var(--gray-800);
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .summary-header {
        margin-bottom: 1rem;
    }
    
    .summary-header h3 {
        margin: 0;
        font-size: var(--text-md);
    }
    
    .summary-details {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .summary-row {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--gray-300);
    }
    
    /* Botões e interações */
    .pill-button {
        background: var(--accent-regular);
        color: var(--accent-text-over);
        border: none;
        border-radius: 999rem;
        padding: 0.75rem 1.5rem;
        font-size: var(--text-md);
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.2s ease;
        text-decoration: none;
    }
    
    .pill-button:hover {
        background: var(--accent-dark);
        transform: translateY(-2px);
    }
    
    .action-button {
        background: var(--accent-regular);
        color: var(--accent-text-over);
    }
    
    /* Mensagens de confirmação e erro */
    .confirmation-message,
    .error-message {
        padding: 1.5rem;
        text-align: center;
    }
    
    .confirmation-icon,
    .error-icon {
        font-size: 2rem;
        color: var(--accent-regular);
        margin-bottom: 1rem;
    }
    
    .error-icon {
        color: #e57373;
    }
    
    .confirmation-details {
        background: var(--gray-800);
        border-radius: 0.75rem;
        padding: 1.5rem;
        margin: 1.5rem 0;
        text-align: left;
    }
    
    .details-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--gray-700);
    }
    
    .details-row:last-child {
        border-bottom: none;
    }
    
    .details-label {
        color: var(--gray-300);
        font-weight: 500;
    }
    
    .details-value {
        color: var(--gray-0);
    }
    
    .details-link {
        color: var(--accent-regular);
        text-decoration: none;
    }
    
    .details-link:hover {
        text-decoration: underline;
    }
    
    .action-links {
        margin-top: 2rem;
    }
    
    /* Responsividade */
    @media (max-width: 768px) {
        .schedule-layout {
            grid-template-columns: 1fr;
        }
        
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>